---
interface Props {
  span: string;
  title: string;
  body: string;
}

const { span, title, body } = Astro.props;
---

<div class="w-full flex flex-col gap-8 justify-between">
  <span class="border-t border-gray-400 w-full"></span>
  <div class="w-full justify-between lg:flex">
    <div class="flex flex-col gap-2.5">
      <span class="text-sm">{span}</span>
      <h4 class="text-2xl font-bold" set:html={title} />
    </div>
    <p class="w-full max-w-[424px] text-text-subtle text-base pt-7">{body}</p>
  </div>
</div>